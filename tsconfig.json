{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "experimentalDecorators": true,
    "strict": true,
    "module": "esnext",
    "paths": {
      "@/*": ["./*"]
    },
    "useDefineForClassFields": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
